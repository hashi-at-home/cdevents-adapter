{
  "name": "cdevents-adapter",
  "engines": {
    "npm": ">=10.0.0 <12.0.0",
    "node": ">=22.0.0 <25.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
