    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@types/node": "^24.3.0",
    "vite": "^7.0.0",
    "vite-ssr-components": "^0.5.0",
    "vitest": "^4.0.0",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^4.17.0"
  }
}
